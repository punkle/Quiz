<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" 
    >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >
		<TextView 
		    android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/score_text_view_level2" 
    	    android:text="Score Text"
    	    android:textAppearance="?android:attr/textAppearanceLarge"
    	    android:gravity="center"/>
		<TextView 
		    android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/instruction_text" 
    	    android:text="What to do"
    	    android:textAppearance="?android:attr/textAppearanceLarge"
    	    android:gravity="center"
    	    />
        <ImageView
            android:id="@+id/hintImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >
	    <LinearLayout 
	        android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
	        android:layout_weight="1"
        	android:background="#ffff22"
        	android:padding="10px">
        	<Button 
			    android:id="@+id/answer1_button" 
			    android:text="1" 
			    android:layout_height="fill_parent" 
			    android:padding="5px"
			    android:gravity="center"
			    android:layout_width="fill_parent"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
	        android:layout_weight="1"
        	android:background="#bbff22" 
        	android:padding="10px">
        	<Button 
			    android:id="@+id/answer2_button" 
			    android:text="2" 
			    android:layout_height="fill_parent" 
			    android:padding="5px"
			    android:gravity="center"
			    android:layout_width="fill_parent"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
	        android:layout_weight="1"
        	android:background="#ffbb22"
        	android:padding="10px">
        	<Button 
			    android:id="@+id/answer3_button" 
			    android:text="3" 
			    android:layout_height="fill_parent" 
			    android:padding="5px"
			    android:gravity="center"
			    android:layout_width="fill_parent"/>
	    </LinearLayout>
	    <!--  LinearLayout 
	        android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
	        android:layout_weight="1"
        	android:background="#0fab22"
        	android:padding="10px">
        	<Button 
			    android:id="@+id/select_button" 
			    android:text="Select" 
			    android:layout_height="fill_parent" 
			    android:padding="5px"
			    android:gravity="center"
			    android:layout_width="fill_parent"/>
	    </LinearLayout-->
	    <TextView 
    android:id="@+id/timer2" 
	android:textAppearance="?android:attr/textAppearanceLarge" 
	android:layout_height="wrap_content" 
	android:text="Timer"
    android:padding="5px"
    android:gravity="center"
    android:layout_width="fill_parent"></TextView>
    </LinearLayout>

</LinearLayout>